<script>
function sendMessage(userId) {
const messageInputId = `message${userId.slice(-1)}`;
const chatLogId = `chat-log-${userId}`;
const messageInput = document.getElementById(messageInputId);
const chatLog = document.getElementById(chatLogId);
const message = messageInput.value.trim();

if (message !== "") {
const newMessage = document.createElement('p');
newMessage.textContent = `${document.getElementById(userId).value}: ${message}`;
chatLog.appendChild(newMessage);
messageInput.value = ""; 
chatLog.scrollTop = chatLog.scrollHeight; 
}
}
</script>

